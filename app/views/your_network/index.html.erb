                            </div><!-- /control-group -->
                        </div><!-- /small-6 columns -->
                    </div><!-- /row-fluid -->

                    <div class="row">
                        <div class="small-12">
                            <div class="control-group">
                                <label for="message" class="control-label">Tu mensaje:</label>
                                    <textarea class="small-12" type="text" name="contact_message" id="message" rows="4"></textarea>
                            </div><!-- /control-group -->
                        </div><!-- /small-12 -->
                    </div><!-- /row-fluid -->

                    <input type="hidden" name="save" value="contact">
                    <button type="submit" class="btn-inverse right">
                        Enviar <span>Mensaje</span>
                        <i class="fa fa-comment"></i>
                    </button>
                </form><!-- /form -->
            </div><!-- /span8 -->
        </div><!-- /row-fluid -->
    </div><!-- /container-fluid -->
</section>
