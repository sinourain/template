                                </div><!-- /controls -->
                            </div><!-- /control-group -->
                        </div><!-- /small-6 columns -->
                        <div class="small-6 columns">
                            <div class="control-group">
                                <label for="email" class="control-label">Correo:</label>
                                <div class="controls">
                                    <input class="small-12" type="email" name="contact_email" id="email">
                                </div><!-- /controls -->
                            </div><!-- /control-group -->
                        </div><!-- /small-6 columns -->
                    </div><!-- /row-fluid -->

                    <div class="row">
                        <div class="small-6 columns">
                            <div class="control-group">
                                <label for="phone" class="control-label">Numero de Telefono:</label>
                                <div class="controls">
                                    <input class="small-12" type="tel" name="contact_phone" id="phone">
                                </div><!-- /controls -->
                            </div><!-- /control-group -->
                        </div><!-- /small-6 columns -->
                        <div class="small-6 columns">
                            <div class="control-group">
                                <label for="website" class="control-label">Tu sitio web:</label>
                                <div class="controls">
                                    <input class="small-12" type="url" name="contact_website" id="website">
